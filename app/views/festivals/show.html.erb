<p id="notice"><%= notice %></p>
<div class="festival-show-container">
  <section class="row-fluid">
    <article class="span6 festival-show festival-left">
      <h2>
        <%= @festival.name %>
      </h2>
      <%unless @festival.img_url=='-'%>
        <%=image_tag(@festival.lg_img_url, alt:@festival.name+" Facebook Image") %>
      <%end%>
      
      <h2>
        Location
      </h2>
      <p>
        <%= @festival.city %>,
        <%= @festival.state %>
      </p>
      <h2>
        Festival Type
      </h2>
      <p>
        <%= @festival.festivaltype %>
      </p>
      <h2>
        Links
      </h2>
      <p>
        <%= link_to @festival.name+"'s Website", @festival.website %>
      </p>
      <p>
        <%= link_to @festival.name+"'s Facebook", @festival.facebook %>
      </p>

     
      <%= link_to 'Edit', edit_festival_path(@festival) %> |
      <%= link_to 'Back', festivals_path %>
    </article>
    <article class="span6 festival-show festival-right">
      <h3>Comments</h3>
      <%= render @festival.comments %>
      <div class="comment-form">
        <%= form_for([@festival, @festival.comments.build]) do |f| %>
          <div class="field form-horizontal">
            <%= f.label :title %><br />
            <%= f.text_field :title, :placeholder=>"Title" %>
          </div>
          <div class="field">
            <%= f.label :comment %><br />
            <%= f.text_area :comment, :placeholder=>"Add comment here...", :rows=> 3 %>
          </div>

          <div class="actions">
            <%= f.submit %>
          </div>
        <% end %>
      </div>
    </article>
  </section>
</div>

