<div id='festival-show' class='row-fluid'>
  <article class="span6">
    <h2>
      <%= @festival.name %>
    </h2>
      <%unless @festival.img_url=='-' or @festival.img_url == nil%>
        <%=image_tag(@festival.img_url+'?width=150&height=150', alt:@festival.name+" Facebook Image", class: 'fest-img img-polaroid') %>

      <%end%>
    
    <div class='festival-social-buttons'>
      <%= link_to image_tag('facebook-128x128.png'), @festival.facebook, :target => "_blank" %>

      <%= link_to image_tag('twitter-128x128.png'), @festival.twitter, :target => "_blank" %>
    </div>

    <p>
      <%= link_to @festival.name+"'s Website", @festival.website, :target => "_blank" %>
    </p>

    <%= render 'festival_years/showyear' %>
    <article>
      <h3>Ticket Exchange</h3>
      <div class="ticket-exchange">
        <%= render @festival.comments %>
      </div>
      <%= render :partial => 'comments/form', :locals => {:commentable => @festival} %>
    </article>
    
  </article>
  
  
  <article class="span6">
    <%= render @festival.reviews %>
    <%= render :partial => 'reviews/form', :locals => {:festival => @festival, :user_review => @user_review} %>
    


    
  </article>
  
</div>

