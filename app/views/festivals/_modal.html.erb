<div id="<%=festival.id%>" class="festival-modal modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <header class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel"><%=festival.name%></h3>
  </header>
  <div class="row-fluid">
    <div class="span6">
      <%=image_tag("infrasound.jpg", alt:"infrasound") %>
    </div>
    <div class="span3">
      <div class="modal-body">
        <div class="well modal-box">
          <header class="box-header">
            <h3>Type of Music</h3>
          </header>
            <p><%=festival.city%></p>
        </div>
        <div class="well modal-box">
          <header class="box-header">
            <h3>Date</h3>
          </header>
          <p><%=festival.start_date%></p>
        </div>
        <div class="well modal-box">
          <header class="box-header">
            <h3>Website</h3>
          </header>
          <p><%=festival.website%></p>
        </div>
      </div>
    </div>
    <div class="span3">
      <%= render festival.comments %>
   
      
      
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    </div>
  </div>
</div>