<div id="modal_<%=ride.id.to_s%>" class="iframe-ride-modal modal hide fade" tabindex="-1" aria-labelledby="myModalLabel" aria-hidden="true">

  <div class='row-fluid ride-container'>
  <div class='span12'>
    <button class="ride-close btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <%if ride.giving_ride %>
      <div class="row-fluid">
        <h4> Giving a ride </h4>
        </div>
    <%else%>
      <div class="row-fluid">
        <h4> Looking for a ride </h4>
        </div>
    <%end%>

    <div class='row-fluid ride-content'>

        <b>Leave:</b> <%= l ride.leave_date, :format => :full%></br>
        <b>Return:</b> <%= l ride.return_date, :format => :full%></br>

        <b>Location:</b> <%= ride.address.city%>, <%= ride.address.state%></br>
        <% if ride.cost%>
          <b>Cost: </b><%= ride.cost%></br>
        <%end%>
        <b>Message: </b><%= ride.message%>

    </div>
    <div class='row-fluid'>
      </br>
      <div id='ride_<%=ride.id%>'>
        <% ride.comments.each do |comment|%>
          <%= render 'comments/iframe_comment', comment: comment %>
        <%end%>
      </div>
      <% if ride.comments.length==0 %>
        <i> No Comments </i>
      <%end%>
      <% if user_signed_in? %>
        <%= render :partial => 'comments/iframe_form', :locals => {:commentable => ride} %>
      <% else %>
        <h4> <%=link_to 'Sign up to message', '#'%> </h4>
      <% end %>
    </div>
  </div>
</div>
  


</div>


