<p id="notice"><%= notice %></p>

<div class='row-fluid'>
  <div class='span12'>
    <article class='blog-container show-blog'>
      <h2>
        <%= @blog.title %>
      </h2>
      <hr class='horizontal-divider-2'>
      <p>
        <pre class='blog-area'>
        <%= raw @blog.content %>
      </pre>
      </p>
    </article>
  </div>
</div>
<div class='row-fluid'>
  <div class='span8'>
    <h3>Comments</h3>
    <%= render @blog.comments %>
    <%= render :partial => 'comments/form', :locals => {:commentable => @blog} %>
  </div>
</div>
