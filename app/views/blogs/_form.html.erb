<%= simple_form_for(@blog) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, :input_html => {class: "blog-input"}  %>
    <b><i>Make sure there is a picture at the top and it is at least 960px wide. Any height will do. </b></i>
    <%= f.input :content, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Full'}, tabindex: "-1", class: "blog-input", id: "blog-content-input"} %>
  </div>

   <%= f.button :submit %>

<% end %>
