<h1> Festivals </h1>
<%= link_to 'Add A Festival', new_festival_path, class: 'admin-link' %>

<h1> Forum </h1>
<%= link_to 'Add A Forum', new_forum_path, class: 'admin-link' %>






<h1> Contests/Giveaways </h1>

<%= link_to 'Add A Contest', new_contest_path, class: 'admin-link' %></br>
<%= link_to 'Contest List', '/admin-contests', class: 'admin-link' %>

<div class='row-fluid'>
  <div class='span8 posts-container'>
    <h1> Recent Posts </h1>

    <% for post in @posts %>  
      <div class="post">  
        <span class="left"><%= link_to post.user.username, "/users/#{post.user.id}" %></td>   <i><%= distance_of_time_in_words_to_now post.updated_at %> ago</i><%if user_signed_in? %>  
        <%if post.user_id == current_user.id or current_user.admin == true%>
        <div class='btn-group'>
          <%= link_to "Edit", edit_post_path(post), class: 'btn btn-mini btn-success'%>
          <%= link_to "Delete", post, :confirm => 'Are you sute?', :method => :delete, class: 'btn btn-mini btn-danger'%>
          </div>
        <%end%>
        <%end%><hr class='horizontal-divider-3'/></span>  </span>  

        <span class="right"><%= post.content %></span>  
      </div>

      <% end %>  
  </div>
</div>


<div class='row-fluid'>
  <div class='span6'>
    <h1> Recent Comments </h1>
     <%= render @comments %>
  </div>
  <div class='span6'>
    <h1> Recent Reviews </h1>
      <%= render @reviews %>
  </div>
  
</div>

<div class='row-fluid'>
  <div class='span12'>
      <h1> Recent Rides </h1>
      <%= render @rides %>
  </div>
</div>
