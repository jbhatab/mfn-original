<div class="comment-form">
  <%= form_for([commentable, commentable.comments.build], remote: :true) do |f| %>
    <div class="field form-horizontal">
      <%= f.label :title %><br />
      <%= f.text_field :title, :placeholder=>"Title" %>
    </div>
    <div class="field">
      <%= f.label :comment %><br />
      <%= f.text_area :comment, :placeholder=>"Add comment here...", :rows=> 3 %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>